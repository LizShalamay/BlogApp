@model BlogApp.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
    ViewBag.Error = "Admins are not allowed to log in";
}
<div id="login-form">
    <div class="form-control">
        @using (Html.BeginForm())
        {
            if (User.IsInRole("admin"))
            {<p>@ViewBag.Error</p>}
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @placeholder = "Login" })
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })

                <div class="button-group">
                    <button type="submit" class="button-submit">Sign in</button>
                    @Html.ActionLink("Register", "Register", "Account")
                </div>
            </div>
        }
    </div>
</div>