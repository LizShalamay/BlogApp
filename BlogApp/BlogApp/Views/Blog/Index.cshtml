@model IEnumerable<BlogApp.Data.Entities.Post>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
<div>
    <div align="left" style="float:left">@Html.ActionLink("Add new post", "CreatePost", "Blog", new { area = "" }, new { @class = "btn btn-default navbar-btn" })</div>
    <div align="right">@Html.ActionLink("Log off", "Logoff", "Account", new { area = "" }, new { @class = "btn btn-default navbar-btn", })</div>
</div>


<div class="col-lg-8 col-md-8 col-sm-8">
    @Html.Partial("Posts")
</div>
<div class="col-lg-4 col-md-4 col-sm-4">
    @using (Html.BeginForm("News", "Blog", FormMethod.Get))
    {
        @Html.Action("ShowNews","Blog")
    }
</div>

