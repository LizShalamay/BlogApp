@model IEnumerable<BlogApp.Data.Entities.Post>

@foreach (var item in Model)
{
    <div class="post">
        <div class="info heading">
            @Html.DisplayFor(modelItem => item.Title)
            <p class="date">
                @Html.DisplayFor(modelItem => item.Date)
            </p>
        </div>
        <div class="post-image">
            @Html.Raw("<img src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
        </div>
        <div class="post-text">
            <p>@Html.DisplayFor(modelItem => item.Text)</p>
            @Html.ActionLink("Open post >>", "OpenPost", "Blog", new { postId = item.Id }, new { @class = "open-post" })
        </div>
    </div>
}