@model BlogApp.Models.CommentModel
<div>
    <div class="comment-heading">
        @*<div style="float:left; font-style:oblique;">*@
        @Html.DisplayFor(modelItem => Model.AuthorName)
        <span style='padding-left:10px;'> </span>
        <div class="date">
            @Html.DisplayFor(modelItem => Model.Date)
        </div>
    </div>
    <div class="comment-body">
        @Html.DisplayFor(modelItem => Model.Text)
    </div>
    <a class="answer" data-parameter="@Model.Id">answer</a>
    <div id="@Model.Id" class="answer-form" style="display:none">
        @Html.Partial("CreateComment", new BlogApp.Data.Entities.Comment { PostId = Model.Id, Date = DateTime.Now, ParentId = Model.Id })
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
